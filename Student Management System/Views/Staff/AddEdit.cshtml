@model Student_Management_System.Models.Staff

@{
    ViewData["Title"] = "AddEdit Staff";
}

<h1>AddEdit Staff</h1>
<h2>@ViewBag.Page</h2>

<form asp-action="AddEdit" asp-controller="Staff" method="post">

    <table border="1">
        <tr>
            <td><label asp-for="StaffId"></label></td>
            <td><input type="number" asp-for="StaffId" class="form-control" /></td>
        </tr>
        <tr>
            <td><label asp-for="DepartmentId"></label></td>
            <td><input type="number" asp-for="DepartmentId" class="form-control" /></td>
        </tr>
        <tr>
            <td><label asp-for="FirstName"></label></td>
            <td><input type="text" asp-for="FirstName" class="form-control" /></td>
        </tr>
        <tr>
            <td><label asp-for="LastName"></label></td>
            <td><input type="text" asp-for="LastName" class="form-control" /></td>
        </tr>

        <tr>
            <td><label asp-for="Email"></label></td>
            <td><input type="email" asp-for="Email" class="form-control" /></td>
        </tr>

    </table>

    <br />

    <input type="submit" value="Insert" class="btn btn-primary" />

</form>
