@model Student_Management_System.Models.Student

@{
    ViewData["Title"] = "AddEdit";
}

<h1>AddEdit Students</h1>
<h2>@ViewBag.Page</h2>

<form asp-action="AddEdit" asp-controller="Student" method="post">

    <table border="1">

        <tr>
            <td><label asp-for="DepartmentId"></label></td>
            <td><input type="number" asp-for="DepartmentId"/></td>
        </tr>
        <tr>
            <td><label asp-for="FirstName"></label></td>
            <td><input type="text" asp-for="FirstName" /></td>
        </tr>
        <tr>
            <td><label asp-for="LastName"></label></td>
            <td><input type="text" asp-for="LastName"/></td>
        </tr>
        <tr>
            <td><label asp-for="DOB"></label></td>
            <td><input type="date" asp-for="DOB"/></td>
        </tr>
        <tr>
            <td><label asp-for="Email"></label></td>
            <td><input type="email" asp-for="Email"/></td>
        </tr>

    </table>

    <br />

    <input type="submit" value="Insert" class="btn btn-primary" />

</form>
